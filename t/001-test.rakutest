use v6;
use lib 'lib';
use File::Path::Copy;
use Test;

plan 7;

ok(emptypath('scratch'.IO), "emptying scratch");
#run qqww{exa -F -lahigHTb --colour-scale --time-style=full-iso --icons=always scratch};
nok("scratch/lib/File/Path/Copy.rakumod".IO ~~ :f, "make sure there is nothing left.");

ok(copypath("lib".IO, "scratch".IO), "copying the whole lib tree into scratch");
#run qqww{exa -F -lahigHTb --colour-scale --time-style=full-iso --icons=always scratch};
ok("scratch/lib/File/Path/Copy.rakumod".IO ~~ :f, "make sure it is there.");
ok(prunepath('scratch/lib'.IO), "emptying scratch");
nok("scratch/lib".IO ~~ :d, "make sure there is nothing left.");
ok(copypath("lib".IO, "scratch".IO), "copying the whole lib tree into scratch");

